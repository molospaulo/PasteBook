@model IEnumerable<PasteBookModel.PB_USER>
<link rel="stylesheet" type="text/css" href="~/Content/Friends.css">
<link rel="stylesheet" type="text/css" href="~/Content/HomePage.css">
<div class="container">

    @foreach (var item in Model)
    {
        <div class="col-md-4" id="containerFriend">
            <div class="divSearchList">
                <div class="container">
                    <div class="col-md-6">
                        <div class="divProfilePic">
                            @{ if (item.PROFILE_PIC == null)
                                {
                                    if (item.GENDER == "M")
                                    {
                                        <img src="~/Content/Images/MaleDefaultImage.jpg" class="img-responsive" id="profilePicFriends" />
                                    }
                                    else if (item.GENDER == "F")
                                    {
                                        <img src="~/Content/Images/femaleDefaultImage.jpg" class="img-responsive" id="profilePicFriends" />
                                    }
                                    else
                                    {
                                        <img src="~/Content/Images/femaleDefaultImage.jpg" class="img-responsive" id="profilePicFriends" />
                                    }
                                }
                                else
                                {
                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.PROFILE_PIC)" id="profilePicFriends" />
                                }
                            }
                        </div>
                    </div>

                    <div class="col-md-6" id="divFriendName">
                        <div class="row">
                            <span id="friendName">
                                @Html.DisplayFor(modelItem => item.FIRST_NAME) @Html.DisplayFor(modelItem => item.LAST_NAME)
                            </span>
                            </div>
                        <div class="row">
                            @Html.ActionLink("Go to timeline", "Timeline", "Home", new { username = item.USER_NAME }, null)
                        </div>
                    </div>
                </div>
            </div>
        </div>
                                }
</div>
<script>
    var UrlGetNotificationCount = '@Url.Action("GetNotifCount", "Notification")'
    var UrlNotificationView = '@Url.Action("NotificationView", "Home")'
</script>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/PasteBook/Home.js" type="text/javascript"></script>
    <script src="~/Scripts/PasteBook/NotificationScript.js" type="text/javascript"></script>
    <script src="~/Scripts/PasteBook/Profile.js" type="text/javascript"></script>

}