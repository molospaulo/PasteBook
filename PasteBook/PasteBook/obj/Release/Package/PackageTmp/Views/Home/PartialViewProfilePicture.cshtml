@model PasteBookModel.PB_USER

@using (Html.BeginForm("GetPicture", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" , @id="myform"}))
{

    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalUploadPic" id="btnAddProfilePic"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>

    <div id="modalUploadPic" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Upload Profile Picture</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div id="imageContainer">
                            <img src="#" alt="Profile picture" id="imagePreview" />
                   
                        </div>
                        <input type="file" name="file" id="myFile" accept="image/png,image/jpeg,image/jpeg" />
                       
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Save" id="btnUploadImage" class="btn btn-default" />
                </div>
            </div>

        </div>
    </div>
}