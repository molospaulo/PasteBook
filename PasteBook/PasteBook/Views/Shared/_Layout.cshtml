<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
                @Html.ActionLink("PasteBook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @{ if (@Session["User"] != null)
                {
                    <div class="col-md-4" id="searchField">
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                        {
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for..." name="keyword">
                                <span class="input-group-btn">

                                    <button type="submit" class="btn btn-default" ><span class="glyphicon glyphicon-search"></span></button>

                                </span>
                            </div>
                        }
                    </div>
                }
            }
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @{ if (@Session["User"] != null)
                        {
                            <li id="notificationContainer">
                                <div class="dropdown">
                                    <span class="dropdown-toggle homeNavbarRight" type="button" id="menu1" data-toggle="dropdown" onclick="showNotifs()">
                                        <span id="notifTitle">Notification</span><span class="badge badge-important" id="notifCount"></span>
                                        <span class="caret"></span>
                                    </span>
                                    
                                    <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="menu1" id="notifDropdown">
                                      
                                                @{Html.RenderAction("NotificationView"); }
                                        
                                     
                                    </ul>
                                </div>
                            </li>
                            <li id="friendRequestContainer">
                                <div class="dropdown">
                                    <span class="dropdown-toggle homeNavbarRight" type="button" id="menu1" data-toggle="dropdown" onclick="showFriendNotifs()">
                                        <span id="notifTitle">Friend Request</span><span class="badge badge-important" id="friendRequestCount"></span>
                                        <span class="caret"></span>
                                    </span>

                                    <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="menu1" id="friendNotifDropdown">
                                        @{Html.RenderAction("FriendRequestView"); }
                                    </ul>
                                </div>
                            </li>

                            <li> @Html.ActionLink("Home", "Home", "Home", null, new { @class = "homeNavbarRight" })</li>
                            <li> @Html.ActionLink("Timeline", "Timeline", "Home", new { id = Session["User"] }, new { @class = "homeNavbarRight" })</li>
                            <li id="settingsContainer">
                                <div class="dropdown">
                                    <span class="dropdown-toggle homeNavbarRight" type="button" id="menu1" data-toggle="dropdown">
                                        <span id="notifTitle">Options</span>
                                        <span class="caret"></span>
                                    </span>

                                    <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="menu1" id="settingsDropdown">
                                        <li><a href="@Url.Action("EditProfile", "Home")">Settings<span class="glyphicon glyphicon-wrench settingIcon" ></span></a></li> 
                                         <li><a href="@Url.Action("Logout", "Home")">Logout<span class="glyphicon glyphicon-log-out settingIcon"></span></a></li>     
                                    </ul>
                                </div>
                            </li>
                            }


                    }
                    @RenderSection("navbarRight", required: false)
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
