@model PasteBookModel.PB_USER
<link rel="stylesheet" type="text/css" href="~/Content/HomePage.css">
<div class="container">
    <div class="row">
        <div class="col-md-3 editPills">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="@Url.Action("EditProfile", "Profile")" class="editTabs">Personal Details</a></li>
                <li class="active"><a href="@Url.Action("EditPassword", "Profile")" class="editTabs">Update Password</a></li>
                <li><a href="@Url.Action("EditEmail", "Profile")" class="editTabs">Update Email</a></li>
            </ul>
        </div>
        <div class="col-md-9">
                <div id="changePassTab">
                    @using (Html.BeginForm("EditPassword", "Profile", FormMethod.Post))
                    {
                        <div class="container editTab" id="changePasswordDiv">
                            <div class="row">
                                <div class="col-md-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="OldPassword" class="control-label">Old password</label>
                                        <input type="password" class="form-control editForms" id="txtOldPassword" name="PASSWORD" />
                                        @Html.ValidationMessage("Password", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group row">
                                        <label for="txtPassword" class="control-label">New password</label>
                                        <input type="password" class="form-control editForms" id="txtNewPAssword" name="newPassword" />

                                    </div>

                                    <div class="form-group row">
                                        <label for="ConfirmPassword" class="control-label">Confirm new password</label>
                                        <input type="password" class="form-control editForms"  name="confirmPassword" />
                                        @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })
                                    </div>
                                    <div class="row">
                                        <input type="submit" value="Save" class="btn btn-default btnSaveDetails" id="btnSavePassword" />
                                    </div>
                                    @Html.HiddenFor(model => model.SALT)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
<script>
    var UrlGetNotificationCount = '@Url.Action("GetNotifCount", "Notification")'
</script>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/PasteBook/SignUpAndLoginScripts.js"> </script>
    <script src="~/Scripts/PasteBook/Home.js" type="text/javascript"></script>
    <script src="~/Scripts/PasteBook/NotificationScript.js" type="text/javascript"></script>
    <script src="~/Scripts/PasteBook/Profile.js" type="text/javascript"></script>


}