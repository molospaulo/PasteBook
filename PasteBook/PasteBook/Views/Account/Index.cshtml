@{
    Layout = "~/Views/Shared/_LayoutSignUpLogin.cshtml";
}
@model PasteBookModel.PB_USER

@using (Html.BeginForm("Index", "Account", FormMethod.Post, new { htmlAttributes = new { @class = "form-inline" } }))
{
    <div class="container" id="loginContainer">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-default" id="loginPanel">
                <div class="panel-heading" id="loginPanelHeading">
                    <div class="row loginRow">
                        <div class="col-md-3 loginCol" id="loginTitle">Login form</div>
                        <div class="col-md-5 loginCol">
                            @Html.ValidationMessage("errorMessage", "", new { @class = "text-danger", @id = "errorMessageLogin" })
                        </div>
                    </div>
                </div>
                <div class="panel-body" id="loginPanelBody">
                    <div class="row loginCol">
                        <div class="input-group"> @Html.EditorFor(modelItem => Model.EMAIL_ADDRESS, new { htmlAttributes = new { @class = "loginFields form-control", @id = "txtloginEmailAddress", @placeholder = "E-mail Address" } })<span class="glyphicon glyphicon-user" aria-hidden="true" id="emailIcon"></span></div>
                        @Html.ValidationMessageFor(modelItem => Model.EMAIL_ADDRESS, "", new { @class = "text-danger", @id = "errorMessageLogin" })
                    </div>

                    <div class="row loginCol">
                        <div class="input-group"> @Html.EditorFor(modelItem => Model.PASSWORD, new { htmlAttributes = new { @class = "loginFields form-control", @id = "txtloginPassword", @placeholder = "Password", @type = "password" } })<span class="glyphicon glyphicon-lock" aria-hidden="true" id="passwordIcon"></span></div>
                       @Html.ValidationMessageFor(modelItem => Model.PASSWORD, "", new { @class = "text-danger", @id = "errorMessageLogin" })
                    </div>
                        <div class="row loginCol center" >
                        <div><input type="submit" value="Sign in" class="btn btn-default" id="btnLogin" /><a href="@Url.Action("SignUp","Account")" class="btn btn-default" id="btnCreate">Create an account</a></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
        </div>
}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/PasteBook/SignUpAndLoginScripts.js"> </script>



}