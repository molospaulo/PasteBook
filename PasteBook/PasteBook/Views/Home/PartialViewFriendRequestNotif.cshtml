
@model IEnumerable<PasteBookModel.PB_NOTIFICATION>
<style>
    #friendNotifDropdown {
        width: 400px;
        margin-top: 50px;
        height: 400px;
        overflow-y: auto;
        overflow-x: hidden;
    }

    #notifContent {
        border-radius: 0px;
        height: 70px;
        padding: 5px;
        margin: 0px;
        box-sizing: border-box;
    }

    #menu1 {
        float: right;
        padding-top: 15px;
    }

    }

    #notifPicture {
    }

    #notif {
        padding: 0px;
        margin: 0px;
    }

    #notifBox {
        padding: 0px;
        margin: 0px;
    }

    #notifTitle {
        margin-top: 5px;
        word-wrap: break-word;
    }

    #notifBox ::-webkit-scrollbar {
        width: 12px;
    }

    /* Track */
    #notifBox ::-webkit-scrollbar-track {
        -webkit-border-radius: 10px;
        border-radius: 10px;
    }

    #notifBox ::-webkit-scrollbar {
        width: .5em;
    }

    /* Handle */
    #notifBox ::-webkit-scrollbar-thumb {
        -webkit-border-radius: 10px;
        border-radius: 10px;
        background: #fff;
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
    }

        #notifBox::-webkit-scrollbar-thumb:window-inactive {
            background: #fff;
        }
        .btnFriendRequest{
    height: 30px;
    padding: 2px 3px;
        }
</style>


        <li role="presentation" id="notifBox">
@{ foreach (var item in Model)
    {
            <div class="row" id="notifContent">
                <div class="col-md-2" id="notifPicture">

                </div>
                <div class="col-md-10" id="notif">
                    <div class="row" id="notifTitle">
                        <div class="col-md-12">
                            <div class="row">
                                @item.PB_USER1.FIRST_NAME @item.PB_USER1.LAST_NAME
                               sent you a friend request
                            </div>
                            <div class="row">
                                <button type="button" class="btn btn-success btnFriendRequest" id="btnAcceptFriend" onclick="AcceptFriend(@item.SENDER_ID, @item.RECEIVER_ID)">Accept Friend</button>
                                <button type="button" class="btn btn-danger btnFriendRequest" id="btnRejectFriend" onclick="RejectFriend(@item.SENDER_ID, @item.RECEIVER_ID)">Reject Friend</button>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="notifDate">
                        <p id="date"></p>
                    </div>
                </div>
            </div>
        }
    }
   </li>
