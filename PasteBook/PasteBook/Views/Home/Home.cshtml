@model PasteBook.HomeViewModel
<link rel="stylesheet" type="text/css" href="~/Content/HomePage.css">
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div id="profilePic" >
                    <img src="~/Content/Images/MaleDefaultImage.jpg" id="profilePic" class="img-responsive"  />
                </div>
                <div id="userFullName">
                    @Model.User.FIRST_NAME &nbsp; @Model.User.LAST_NAME
                </div>
            </div>
            <div class="row" id="friendsDiv">
                @Html.ActionLink("Friends", "Friends", "Home")
            </div>
        </div>
      

        <div class="col-md-6">
            
            <div class="row">
                @Html.Partial("PartialViewAddPost",Model)
            </div>
            
         <div id="newsFeed">
             @{
                 Html.RenderAction("NewsFeed", new { id = Session["User"] });
                     }
         </div>
        </div>

        <div class="col-md-3">

        </div>
    </div>
</div>
<input type="hidden" id="UserID" value="@Session["User"]" />

<script>
        var UrlAddLike = '@Url.Action("AddOrDeleteLike","Home")'
        var UrlAddPost = '@Url.Action("AddPost","Home")'
        var UrlRefreshNewsFeed = '@Url.Action("NewsFeed", "Home", new { id = Session["User"] })'
</script>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

<script src="~/Scripts/PasteBook/Home.js" type="text/javascript"></script>
}
