@model IEnumerable<PasteBookModel.PB_NOTIFICATION>
<style>
    #notifDropdown {
        width: 400px;
        margin-top: 50px;
        height: 400px;
        overflow-y: auto;
        overflow-x: hidden;
    }

    #notifContent {
        border-bottom-style: solid;
        border-bottom-color: #E8E9E9;
        border-radius: 0px;
        height: 70px;
        padding: 5px;
        margin: 0px;
        box-sizing: border-box;
    }

    #menu1 {
        float: right;
        padding-top: 15px;
    }

    }

    #notifPicture {
    }

    #notif {
        padding: 0px;
        margin: 0px;
    }

    #notifBox {
        padding: 0px;
        margin: 0px;
    }

    #notifTitle {
        margin-top: 5px;
        word-wrap: break-word;
    }

    #notifBox::-webkit-scrollbar {
        width: 12px;
    }

    /* Track */
    #notifBox::-webkit-scrollbar-track {
        -webkit-border-radius: 10px;
        border-radius: 10px;
    }

    #notifBox::-webkit-scrollbar {
        width: .5em;
    }

    /* Handle */
    #notifBox ::-webkit-scrollbar-thumb {
        -webkit-border-radius: 10px;
        border-radius: 10px;
        background: #fff;
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
    }

        #notifBox::-webkit-scrollbar-thumb:window-inactive {
            background: #fff;
        }

    #seeAllNotifs {
        margin-left: 110px;
        font-size: 20px;
    }
</style>

@{ foreach (var item in Model)
    {
        <li role="presentation" id="notifBox">
            <div class="row" id="notifContent">
                @if (item.NOTIF_TYPE == "L")
                {<a href="@Url.Action("Posts", "Post", new { id = @item.PB_POSTS.ID })">
                    <div class="col-md-4" id="notifPicture">
                        <div class="container">
                            @{ if (item.PB_USER1.PROFILE_PIC == null)
                                {
                                    if (item.PB_USER1.GENDER == "M")
                                    {
                                        <img src="~/Content/Images/MaleDefaultImage.jpg" class="img-responsive img-rounded" id="profilePicNotif" />
                                    }
                                    else if (item.PB_USER1.GENDER == "F")
                                    {
                                        <img src="~/Content/Images/femaleDefaultImage.jpg" class="img-responsive img-rounded" id="profilePicNotif" />
                                    }
                                    else
                                    {
                                        <img src="~/Content/Images/femaleDefaultImage.jpg" class="img-responsive img-rounded" id="profilePicNotif" />
                                    }
                                }
                                else
                                {
                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.PB_USER1.PROFILE_PIC)" id="profilePicNotif" class="img-responsive img-rounded" />
                                }
                            }
                        </div>
                    </div>
                    <div class="col-md-8" id="notif">
                        <div class="row" id="notifTitle">
                            <span id="notifName">@item.PB_USER1.FIRST_NAME @item.PB_USER1.LAST_NAME</span>  likes your post

                        </div>
                        <div class="row" id="notifDate">
                            <span id="dateNotifBar">
                                @{ var date = String.Format("{0:f}", item.CREATED_DATE);
                                    <span class="glyphicon glyphicon-calendar"></span>   @date
                                }
                            </span>
                        </div>
                    </div>
                </a>
                                    }
                                    else if (item.NOTIF_TYPE == "C")
                                    { <a href="@Url.Action("Posts", "Post", new { id = @item.PB_POSTS.ID })">
                    <div class="col-md-4" id="notifPicture">
                        <div class="container">
                            @{ if (item.PB_USER1.PROFILE_PIC == null)
                                {
                                    if (item.PB_USER1.GENDER == "M")
                                    {
